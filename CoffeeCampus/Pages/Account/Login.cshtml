@page
@model CoffeeCampus.Pages.Account.LoginModel
@{
    Layout = null; // Fjern layout for at undgå konflikter
}

<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="login-container">
        <img src="/images/Kaffe.png" class="login-logo">
        <h2>Sign In</h2>
        <form method="post">
            <div class="form-group">
                <label for="email"><i class="fa fa-envelope"></i> Email</label>
                <input type="email" id="email" name="Email" required placeholder="Skriv din email" />
            </div>
            <div class="form-group">
                <label for="password"> <i class="fa fa-lock"></i> Password</label>
                <input type="password" id="password" name="Password" required placeholder="Skriv dit password" />
            </div>
            <div class="form-group">
                <button type="submit" class="login-button">Sign In</button>
            </div>
        </form>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))

        {
            <p class="error-message">@Model.ErrorMessage</p>
        }
    </div>
</body>
</html>